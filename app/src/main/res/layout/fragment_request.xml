<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.microtecweb.css_mobile.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView android:text="@string/lb_bank"
            android:textStyle="bold"
            android:layout_width="1dip"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/spinnerBank"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView android:text="@string/lb_branch"
            android:textStyle="bold"
            android:layout_width="1dip"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/spinnerBranch"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="@string/lb_atmid"
            android:textStyle="bold"
            android:layout_width="1dip"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/spinnerATM"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="@string/lb_issue"
            android:textStyle="bold"
            android:layout_width="1dip"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/txtIssue"
            android:layout_width="1dip"
            android:layout_weight="3"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btTakePhoto"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="5dp"
            android:layout_width="1dip"
            android:layout_weight="1"
            android:src="@drawable/takephoto"
            android:layout_height="wrap_content"
            android:labelFor="@string/lb_take_photo" />
        <ImageButton
            android:id="@+id/btPhotoGallery"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="5dp"
            android:layout_width="1dip"
            android:layout_weight="1"
            android:src="@drawable/gallery"
            android:layout_height="wrap_content"
            android:labelFor="@string/lb_photo_gallery"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCap"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desImgCap"
            android:src="@android:drawable/ic_menu_gallery"
            android:visibility="invisible"></ImageView>

        <ImageView
            android:id="@+id/imgCap2"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desImgCap"
            android:src="@android:drawable/ic_menu_gallery"
            android:visibility="invisible"></ImageView>

        <ImageView
            android:id="@+id/imgCap3"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desImgCap"
            android:src="@android:drawable/ic_menu_gallery"
            android:visibility="invisible"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btSubmit"
            android:text="@string/lb_submit"
            android:layout_width="1dip"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
